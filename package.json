{
  "name": "yt-down",
  "version": "1.0.0",
  "description": "Simple youtube downloader",
  "license": "ISC",
  "author": "Leonard Wittrock",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "concurrently \"tsc && node ./dist/main.js\" \"cd client && npm run dev\"",
    "build": "tsc",
    "dev": "nodemon",
    "postinstall": "tsc && cd client && npm install"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "exec": "tsc && node ./dist/main.js",
    "ext": "ts,js,json"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "concurrently": "^6.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "socket.io": "^4.8.1",
    "ytdlp-nodejs": "^2.3.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^24.5.2",
    "@types/socket.io": "^2.1.3",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.2"
  }
}
